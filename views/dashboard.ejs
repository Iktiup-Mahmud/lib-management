<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Library Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha384-DyZv6Z8e+IYy6+6h6+6h6+6h6+6h6+6h6+6h6+6h6+6h6+6h6+6h6+6h6+6"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="container">
      <div class="page-header">
        <h1><i class="fas fa-chart-line"></i> Dashboard</h1>
        <p>
          Monitor your library's performance with real-time analytics and
          insights
        </p>
      </div>

      <!-- Enhanced Statistics Grid with Icons -->
      <div class="statistics">
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-book"></i>
          </div>
          <h2>Total Books</h2>
          <p id="totalBooks"><%= stats.totalBooks || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-users"></i>
          </div>
          <h2>Active Members</h2>
          <p id="totalMembers"><%= stats.totalMembers || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-book-reader"></i>
          </div>
          <h2>Currently Borrowed</h2>
          <p id="currentlyBorrowed"><%= stats.currentlyBorrowed || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <h2>Overdue Books</h2>
          <p id="overdueBooks"><%= stats.overdueBooks || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-dollar-sign"></i>
          </div>
          <h2>Total Fines</h2>
          <p id="totalFines">
            $<%= parseFloat(stats.totalFines || 0).toFixed(2) %>
          </p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-calendar-plus"></i>
          </div>
          <h2>Today's Borrows</h2>
          <p id="todayBorrows"><%= stats.todayBorrows || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-undo-alt"></i>
          </div>
          <h2>Today's Returns</h2>
          <p id="todayReturns"><%= stats.todayReturns || 0 %></p>
        </div>
        <div class="stat">
          <div class="stat-icon">
            <i class="fas fa-chart-bar"></i>
          </div>
          <h2>Active This Month</h2>
          <p id="activeThisMonth"><%= stats.activeThisMonth || 0 %></p>
        </div>
      </div>

      <!-- Quick Actions Card -->
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
        </div>
        <div
          style="
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
          "
        >
          <a href="/books/add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Book
          </a>
          <a href="/members/add" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Add New Member
          </a>
          <a href="/borrow/issue" class="btn">
            <i class="fas fa-hand-holding"></i> Issue Book
          </a>
          <a href="/borrow/return" class="btn">
            <i class="fas fa-undo"></i> Return Book
          </a>
          <a href="/dashboard/reports/overdue" class="btn btn-danger">
            <i class="fas fa-exclamation-circle"></i> Overdue Report
          </a>
        </div>
      </div>

      <!-- Popular Books Section -->
      <% if (popularBooks && popularBooks.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-star"></i> Most Popular Books</h3>
        </div>
        <div class="search-container">
          <div style="position: relative">
            <i class="fas fa-search search-icon"></i>
            <input
              type="text"
              class="search-input"
              placeholder="Search popular books..."
            />
          </div>
        </div>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th class="sortable"><i class="fas fa-book"></i> Title</th>
                <th class="sortable">
                  <i class="fas fa-user-edit"></i> Author
                </th>
                <th class="sortable">
                  <i class="fas fa-chart-line"></i> Times Borrowed
                </th>
                <th class="sortable">
                  <i class="fas fa-hand-holding"></i> Currently Borrowed
                </th>
                <th class="sortable">
                  <i class="fas fa-clock"></i> Avg Borrow Days
                </th>
                <th class="sortable">
                  <i class="fas fa-calendar"></i> Last Borrowed
                </th>
              </tr>
            </thead>
            <tbody>
              <% popularBooks.forEach(book => { %>
              <tr>
                <td><strong><%= book.title %></strong></td>
                <td><%= book.author %></td>
                <td>
                  <span class="status borrowed"><%= book.borrow_count %></span>
                </td>
                <td><%= book.currently_borrowed %></td>
                <td><%= Math.round(book.avg_borrow_days || 0) %> days</td>
                <td>
                  <%= book.last_borrowed ? new
                  Date(book.last_borrowed).toLocaleDateString() : 'Never' %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>

      <!-- Recent Transactions Section -->
      <% if (recentTransactions && recentTransactions.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-history"></i> Recent Transactions</h3>
        </div>
        <div class="search-container">
          <div style="position: relative">
            <i class="fas fa-search search-icon"></i>
            <input
              type="text"
              class="search-input"
              placeholder="Search transactions..."
            />
          </div>
        </div>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th class="sortable"><i class="fas fa-hashtag"></i> ID</th>
                <th class="sortable"><i class="fas fa-user"></i> Member</th>
                <th class="sortable"><i class="fas fa-book"></i> Book</th>
                <th class="sortable">
                  <i class="fas fa-user-edit"></i> Author
                </th>
                <th class="sortable">
                  <i class="fas fa-calendar-alt"></i> Borrow Date
                </th>
                <th class="sortable">
                  <i class="fas fa-info-circle"></i> Status
                </th>
              </tr>
            </thead>
            <tbody>
              <% recentTransactions.forEach(transaction => { %>
              <tr>
                <td><strong>#<%= transaction.id %></strong></td>
                <td><%= transaction.member_name %></td>
                <td><%= transaction.book_title %></td>
                <td><%= transaction.book_author %></td>
                <td>
                  <%= new Date(transaction.borrow_date).toLocaleDateString() %>
                </td>
                <td>
                  <span
                    class="status <%= transaction.transaction_status.toLowerCase() %>"
                  >
                    <%= transaction.transaction_status %>
                  </span>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>

      <!-- Monthly Statistics Chart -->
      <% if (monthlyStats && monthlyStats.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-chart-bar"></i> Monthly Borrowing Statistics</h3>
        </div>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th class="sortable"><i class="fas fa-calendar"></i> Month</th>
                <th class="sortable">
                  <i class="fas fa-arrow-up"></i> Total Borrows
                </th>
                <th class="sortable"><i class="fas fa-check"></i> Returned</th>
                <th class="sortable">
                  <i class="fas fa-hand-holding"></i> Still Borrowed
                </th>
                <th class="sortable">
                  <i class="fas fa-exclamation"></i> Overdue
                </th>
                <th class="sortable">
                  <i class="fas fa-users"></i> Unique Members
                </th>
                <th class="sortable">
                  <i class="fas fa-dollar-sign"></i> Total Fines
                </th>
              </tr>
            </thead>
            <tbody>
              <% monthlyStats.forEach(stat => { %>
              <tr>
                <td>
                  <strong
                    ><%= stat.month_name %> <%= stat.borrow_year %></strong
                  >
                </td>
                <td>
                  <span class="status borrowed"><%= stat.total_borrows %></span>
                </td>
                <td>
                  <span class="status returned"
                    ><%= stat.returned_books %></span
                  >
                </td>
                <td>
                  <span class="status available"
                    ><%= stat.still_borrowed %></span
                  >
                </td>
                <td>
                  <span class="status overdue"><%= stat.overdue_books %></span>
                </td>
                <td><%= stat.unique_members %></td>
                <td>
                  $<%= parseFloat(stat.total_fines_generated || 0).toFixed(2) %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>

      <!-- Genre Distribution -->
      <% if (genreStats && genreStats.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-tags"></i> Book Collection by Genre</h3>
        </div>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th class="sortable"><i class="fas fa-tag"></i> Genre</th>
                <th class="sortable">
                  <i class="fas fa-books"></i> Total Books
                </th>
                <th class="sortable">
                  <i class="fas fa-check-circle"></i> Available
                </th>
                <th class="sortable">
                  <i class="fas fa-hand-holding"></i> Borrowed
                </th>
                <th class="sortable">
                  <i class="fas fa-percentage"></i> Availability %
                </th>
                <th class="sortable">
                  <i class="fas fa-user-edit"></i> Authors
                </th>
              </tr>
            </thead>
            <tbody>
              <% genreStats.forEach(genre => { %>
              <tr>
                <td><strong><%= genre.genre %></strong></td>
                <td><%= genre.total_books %></td>
                <td>
                  <span class="status available"
                    ><%= genre.available_copies %></span
                  >
                </td>
                <td>
                  <span class="status borrowed"
                    ><%= genre.borrowed_copies %></span
                  >
                </td>
                <td><%= genre.availability_percentage %>%</td>
                <td><%= genre.unique_authors %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>

      <!-- System Information -->
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-server"></i> System Information</h3>
        </div>
        <div
          style="
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
          "
        >
          <div style="text-align: center; padding: 1rem">
            <i
              class="fas fa-sync-alt"
              style="
                font-size: 2rem;
                color: var(--text-secondary);
                margin-bottom: 0.5rem;
              "
            ></i>
            <h4>Last Refresh</h4>
            <p id="lastRefresh">Just now</p>
          </div>
          <div style="text-align: center; padding: 1rem">
            <i
              class="fas fa-database"
              style="
                font-size: 2rem;
                color: var(--text-secondary);
                margin-bottom: 0.5rem;
              "
            ></i>
            <h4>Database Views</h4>
            <p>7 Active Views</p>
          </div>
          <div style="text-align: center; padding: 1rem">
            <i
              class="fas fa-chart-pie"
              style="
                font-size: 2rem;
                color: var(--text-secondary);
                margin-bottom: 0.5rem;
              "
            ></i>
            <h4>Report Generation</h4>
            <p>Real-time</p>
          </div>
          <div style="text-align: center; padding: 1rem">
            <i
              class="fas fa-shield-alt"
              style="font-size: 2rem; color: #27ae60; margin-bottom: 0.5rem"
            ></i>
            <h4>Data Integrity</h4>
            <p style="color: #27ae60">âœ“ Verified</p>
          </div>
        </div>
      </div>

      <!-- Quick Reports -->
      <div class="card">
        <div class="card-header">
          <h3><i class="fas fa-file-alt"></i> Quick Reports</h3>
        </div>
        <div
          style="
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
          "
        >
          <a href="/dashboard/reports/overdue" class="btn btn-danger">
            <i class="fas fa-exclamation-triangle"></i> Overdue Books
          </a>
          <a href="/dashboard/reports/popular-books" class="btn">
            <i class="fas fa-star"></i> Popular Books
          </a>
          <a href="/members/reports/overdue" class="btn btn-warning">
            <i class="fas fa-user-clock"></i> Overdue Members
          </a>
          <a href="/borrow/reports/popular" class="btn btn-success">
            <i class="fas fa-trending-up"></i> Borrowing Trends
          </a>
          <a href="/borrow/current" class="btn">
            <i class="fas fa-list"></i> Current Borrows
          </a>
          <a href="/books" class="btn">
            <i class="fas fa-book-open"></i> All Books
          </a>
          <a href="/members" class="btn">
            <i class="fas fa-users"></i> All Members
          </a>
          <a href="/borrow" class="btn">
            <i class="fas fa-exchange-alt"></i> All Transactions
          </a>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>
